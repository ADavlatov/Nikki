<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/layout.css"/>
</head>
<body>
@if (ViewBag.IsAuth)
{
    <div class="header">
        <div class="container">
            <div class="header_content">
                <p class="header_logo">
                    Nikki
                </p>
                <div class="header_navigation">
                    <a class="header_item" href="#">
                        Notifications
                    </a>
                    <a class="header_item" href="#">
                        Spaces
                    </a>
                    <a class="header_item" asp-page="">
                        Account
                    </a>
                    <a class="header_item" asp-page="Logout">
                        Logout
                    </a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="header">
        <div class="container">
            <div class="header_content">
                <p class="header_logo">
                    Nikki
                </p>
                <div class="header_navigation">
                    <a class="header_item" href="#">
                        About
                    </a>
                    <a class="header_item" href="#">
                        Contacts
                    </a>
                    <a class="header_item" asp-page="SignIn">
                        Sign In
                    </a>
                    <a class="header_item" asp-page="LogIn">
                        Log In
                    </a>
                </div>
            </div>
        </div>
    </div>
}
@RenderBody()
</body>
</html>