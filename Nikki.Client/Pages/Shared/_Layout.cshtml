@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/layout.css"/>
</head>
<body>
@if (ViewBag.IsAuth)
{
    <div class="header">
        <div class="container">
            <div class="header_content">
                <p class="header_logo">
                    Nikki
                </p>
                <div class="header_navigation">
                    <a href="#">
                        About
                    </a>
                    <a href="#">
                        Contacts
                    </a>
                    <a href="#">
                        Account
                    </a>
                    <a href="#">
                        Exit
                    </a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="header">
        <div class="container">
            <div class="header_content">
                <p class="header_logo">
                    Nikki
                </p>
                <div class="header_navigation">
                    <a href="#" class="header_navigation-about">
                        About
                    </a>
                    <a href="#" class="header_navigation-contacts">
                        Contacts
                    </a>
                    <a asp-page="SignIn" class="header_navigation-signin">
                        Sign In
                    </a>
                    <a asp-page="LogIn" class="header_navigation-login">
                        Log In
                    </a>
                </div>
            </div>
        </div>
    </div>
}
@RenderBody()
</body>
</html>