@page
@using Nikki.Client.Services
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Nikki.Client.Pages.LogIn

@{
    Layout = "Shared/_Layout";
    ViewBag.IsAuth = new AuthValidationService().ValidateUserAuth(Request, Response);
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>Log In</title>
    <link rel="stylesheet" href="/css/logIn.css"/>
</head>
<body>
<div class="log">
    <div class="container">
        <div class="log_content">
            <p class="log_title">Log In</p>
            <form class="log_form" method="post">
                <div class="log_form-item">
                    <a>Enter your username or email:</a>
                    <label>
                        <input name="username" type="text">
                    </label>
                    @if (Model.UsernameErrors is not null && Model.UsernameErrors.Length > 0)
                    {
                        <ul class="log_errors">
                            @foreach (var error in Model.UsernameErrors)
                            {
                                <li>@error</li>
                            }
                        </ul>
                    }
                </div>
                <div class="log_form-item">
                    <a>Enter your password:</a>
                    <label>
                        <input name="password" type="password">
                    </label>
                    @if (Model.PasswordErrors is not null && Model.PasswordErrors.Length > 0)
                    {
                        <ul class="log_errors">
                            @foreach (var error in Model.PasswordErrors)
                            {
                                <li>@error</li>
                            }
                        </ul>
                    }
                </div>
                <button class="log_form-btn" type="submit">
                    Submit
                </button>
            </form>
        </div>
    </div>
</div>
</body>
</html>